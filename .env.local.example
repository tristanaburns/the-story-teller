# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=The Story Teller

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/your-database?retryWrites=true&w=majority
MONGODB_DB=storyteller

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-generated-secret

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# OpenAI Integration
AI_API_KEY=your-openai-api-key

# Logging Configuration
# Valid options: DEBUG, INFO, WARN, ERROR, NONE
LOG_LEVEL=DEBUG

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_MCP_SERVERS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
