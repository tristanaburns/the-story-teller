# Server Configuration
NODE_ENV=development
PORT=3004

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/mongodb-atlas-mcp
MONGODB_DB_NAME=mongodb-atlas-mcp

# Security Settings
API_KEY_REQUIRED=false
API_KEY=your-api-key-here
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging Configuration
LOG_LEVEL=debug                    # Logging level for console (trace, debug, info, warn, error, fatal)
MONGODB_LOG_LEVEL=info             # Logging level for MongoDB (trace, debug, info, warn, error, fatal)
MONGODB_LOGGING_ENABLED=true       # Enable MongoDB logging transport
DISABLE_MONGO_LOGGING=false        # Alternative way to disable MongoDB logging
LOG_CORRELATION_HEADER=x-correlation-id  # HTTP header for correlation ID
MCP_SERVER_NAME=mongodb-atlas-nest       # Name of the MCP server for logs
APP_VERSION=1.0.0                  # Application version for logs

# MongoDB Atlas Settings
DEFAULT_ATLAS_DB_NAME=default-db
ATLAS_API_KEY=your-atlas-api-key-here
ATLAS_CONNECTION_TIMEOUT_MS=30000
ENABLE_CONNECTION_POOLING=true

# Performance
MONGODB_POOL_SIZE=10
REQUEST_TIMEOUT_MS=5000
